<%# ユーザ情報入力 %>
<% form_for :user, :url => { :controller => "entry", :action => "input" } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :login_id, "*ログインID" %><br />
    <%= f.text_field :login_id, :value => @user.login_id, :class => "input_field_width_200" %>
  </p>

  <br />
  
  <p>
    <%= f.label :password, "*パスワード" %><br />
    <%= f.password_field :password, :value => @user.password, :class => "input_field_width_200" %>
  </p>

  <br />
  
  <p>
    <%= f.label :password_confirmation, "*パスワード確認" %><br />
    <%= f.password_field :password_confirmation, :value => @user.password_confirmation, :class => "input_field_width_200" %>
  </p>
  
  <br />
  
  <p>
    <%= f.label :display_name, "表示名" %><br />
    <%= f.text_field :display_name, :value => @user.display_name, :class => "input_field_width_200" %>
  </p>
  
  <br />
  
  <p>
    <%= f.label :gender, "性別" %><br />
    <%= f.radio_button :gender , "man" %><%= f.label :gender_man, " 男性" %>
    <%= f.radio_button :gender , "woman" %><%= f.label :gender_woman, " 女性" %>
    <%= f.radio_button :gender , "none" %><%= f.label :gender_none, " 未選択" %>
  </p>
  
  <br />
  
  <p>
    <%= f.label :generation, "世代" %><br />
    <%= f.select :generation, $generation_hash, :selected => @user.generation %>
  </p>
  
  <br />

  <p>
    <%= f.submit "確認", :disable_with => "確認" %>
  </p>
<% end %>